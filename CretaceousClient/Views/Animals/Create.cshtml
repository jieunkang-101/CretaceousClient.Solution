@model CretaceousClient.Models.Animal

<h4>Add a new Animal</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class = "form-control"})

  @Html.LabelFor(model => model.Species)
  @Html.TextAreaFor(model => model.Species, new { @class = "form-control"})

  @Html.LabelFor(model => model.Age)
  @Html.TextBoxFor(model => model.Age, new { @class = "form-control"})

  @Html.LabelFor(model => model.Gender)
  @Html.TextBoxFor(model => model.Gender, new { @class = "form-control"})
  
  <input type="submit" value="Add" class="btn btn-dark" />
}